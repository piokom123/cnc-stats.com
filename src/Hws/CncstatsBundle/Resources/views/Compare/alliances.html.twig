			    </tr>
			    <tr>
				<td class="compareLeft">{{ firstItem.scoreAverage|number_format(0, '.', ',') }}</td>
				<td class="compareMiddle"><img src="/bundles/hwscncstats/images/{% if firstItem.scoreAverage >= secondItem.scoreAverage %}{% set firstScore = firstScore + 1 %}yes.png{% else %}no.png{% endif %}" /></td>
				<td class="compareMiddle">average score</td>
