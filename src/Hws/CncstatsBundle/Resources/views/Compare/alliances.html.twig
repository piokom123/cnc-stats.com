{% extends '::base.html.twig' %}
{% block title %}{{ firstItem.name }} VS {{ secondItem.name }} on {{ world.name }} on {{ selectedDate }} - {% endblock %}
{% block body %}
		<div id="content-full">
		    <div id="box1">
			<h2 class="title">{{ firstItem.name }} VS {{ secondItem.name }} on {{ world.name }}</h2>
			<div style="text-align: center"><a href="{{ url('alliance_world_externalId_date', {'world': world.externalId, 'externalId': firstItem.externalId, 'date': selectedDate}) }}">show {{ firstItem.name }} statistics</a></div>
			<div style="text-align: center"><a href="{{ url('alliance_world_externalId_date', {'world': world.externalId, 'externalId': secondItem.externalId, 'date': selectedDate}) }}">show {{ secondItem.name }} statistics</a></div>
			<br />
			<div style="text-align: center"><a href="{{ url('compareAlliancesCharts_world_firstId_secondId_slug_dateFrom', {'world': world.externalId, 'firstId': firstItem.externalId, 'secondId': secondItem.externalId, 'slug': slug, 'dateFrom': selectedDate}) }}"><strong>show comparison charts</strong></a></div>
		    </div>

		    {% if world.login == '' %}
		    <div class="message_red">We're sorry but we can't show PvP/PvE data from this world!</div>
		    {% endif %}

		    <div>
			<h3 class="headtext">Basic informations</h3>
			<table width="70%" style="margin-left: auto; margin-right: auto;">
			    <tr>
				<td width="40%" class="compareLeft">{{ firstItem.name }}</td>
				<td width="20%" class="compareMiddle">name</td>
				<td width="40%" class="compareRight">{{ secondItem.name }}</td>
			    </tr>
			    <tr>
				<td class="compareLeft">{{ firstItem.nameShort }}</td>
				<td class="compareMiddle">abbreviation</td>
				<td class="compareRight">{{ secondItem.nameShort }}</td>
			    </tr>
			</table>
		    </div>

		    <div>
			<h3 class="headtext">Score and members</h3>
			<table width="70%" style="margin-left: auto; margin-right: auto;">
			    <tr>
				<td width="30%" class="compareLeft">{{ firstItem.scoreRanking }}</td>
				<td width="10%" class="compareMiddle"><img src="/bundles/hwscncstats/images/{% if firstItem.scoreRanking <= secondItem.scoreRanking %}{% set firstScore = firstScore + 1 %}yes.png{% else %}no.png{% endif %}" /></td>
				<td width="20%" class="compareMiddle">ranking</td>
				<td width="10%" class="compareMiddle"><img src="/bundles/hwscncstats/images/{% if firstItem.scoreRanking >= secondItem.scoreRanking %}{% set secondScore = secondScore + 1 %}yes.png{% else %}no.png{% endif %}" /></td>
				<td width="30%" class="compareRight">{{ secondItem.scoreRanking }}</td>
			    </tr>
			    <tr>
				<td class="compareLeft">{{ firstItem.membersCount }}</td>
				<td class="compareMiddle"><img src="/bundles/hwscncstats/images/{% if firstItem.membersCount >= secondItem.membersCount %}{% set firstScore = firstScore + 1 %}yes.png{% else %}no.png{% endif %}" /></td>
				<td class="compareMiddle">members</td>
				<td class="compareMiddle"><img src="/bundles/hwscncstats/images/{% if firstItem.membersCount <= secondItem.membersCount %}{% set secondScore = secondScore + 1 %}yes.png{% else %}no.png{% endif %}" /></td>
				<td class="compareRight">{{ secondItem.membersCount }}</td>
			    </tr>
			    <tr>
				<td class="compareLeft">{{ firstItem.membersBasesCount|number_format(0, '.', ',') }}</td>
				<td class="compareMiddle"><img src="/bundles/hwscncstats/images/{% if firstItem.membersBasesCount >= secondItem.membersBasesCount %}{% set firstScore = firstScore + 1 %}yes.png{% else %}no.png{% endif %}" /></td>
				<td class="compareMiddle">bases</td>
				<td class="compareMiddle"><img src="/bundles/hwscncstats/images/{% if firstItem.membersBasesCount <= secondItem.membersBasesCount %}{% set secondScore = secondScore + 1 %}yes.png{% else %}no.png{% endif %}" /></td>
				<td class="compareRight">{{ secondItem.membersBasesCount|number_format(0, '.', ',') }}</td>
			    </tr>
			    <tr>
				<td class="compareLeft">{{ firstItem.scoreTop|number_format(0, '.', ',') }}</td>
				<td class="compareMiddle"><img src="/bundles/hwscncstats/images/{% if firstItem.scoreTop >= secondItem.scoreTop %}{% set firstScore = firstScore + 1 %}yes.png{% else %}no.png{% endif %}" /></td>
				<td class="compareMiddle">top 40 score</td>
				<td class="compareMiddle"><img src="/bundles/hwscncstats/images/{% if firstItem.scoreTop <= secondItem.scoreTop %}{% set secondScore = secondScore + 1 %}yes.png{% else %}no.png{% endif %}" /></td>
				<td class="compareRight">{{ secondItem.scoreTop|number_format(0, '.', ',') }}</td>
			    </tr>
			    <tr>
				<td class="compareLeft">{{ firstItem.scoreOverall|number_format(0, '.', ',') }}</td>
				<td class="compareMiddle"><img src="/bundles/hwscncstats/images/{% if firstItem.scoreOverall >= secondItem.scoreOverall %}{% set firstScore = firstScore + 1 %}yes.png{% else %}no.png{% endif %}" /></td>
